{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": 0,
        "prefer-destructuring": 0,
        "no-underscore-dangle": 0
    },
    "overrides": [
        {
          "files": ["tests/**/*"],
          "env": {
            "jest": true
          }
        }
      ]
}
